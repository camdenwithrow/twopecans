package views

import "github.com/camdenwithrow/twopecans/views/layouts"

templ Login(env string) {
	@layouts.Base(env) {
		<div class="flex flex-col justify-center items-center">
			<h1 class="text-3xl font-bold text-center my-4">
				Login
			</h1>
			<div>
				<a href="/auth/google" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
					Login with Google
				</a>
			</div>
		</div>
	}
}
